<% var header = blocks.title ? blocks.title.toString() : title;  %> 
<div class="modal fade responsive ajax-body">
  <div class='modal-dialog modal-lg'>
    <div class="modal-content">

      <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="modalLabel"><%- i18n(header) -%></h4>
      </div>

      <div class="modal-body">
        <%- body -%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%- i18n('modal.close') -%></button>
      </div>
    </div>
  </div>
  <%- scripts -%>
  <%- stylesheets -%>
</div>
