<div class="ajax-body">
  <div class='modal-dialog modal-sm'>
    <div class="modal-content">
      <div class="modal-body">
        <h4><%- i18n(req.query.msg || 'modal.msg.confirm') -%></h4>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default"  data-dismiss="modal"><%- i18n('modal.cancel') -%></button>
        <button type="button" class="btn btn-primary"  data-confirm="modal"><%- i18n('modal.confirm') -%></button>
      </div>
    </div>
  </div>
</div>