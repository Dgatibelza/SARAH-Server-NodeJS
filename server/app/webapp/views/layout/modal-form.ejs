<% var header = blocks.title ? blocks.title.toString() : title;  %>  
<div class="modal fade responsive ajax-body">
  <div class='modal-dialog modal-lg'>
    <div class="modal-content">
    <form class="form-horizontal" method="POST" action="<%- blocks.formUrl -%>" role="form" accept-charset="UTF-8" enctype="multipart/form-data">
      <input type="hidden" name="title" value="<%- header -%>" />
      <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="modalLabel"><%- i18n(header) -%></h4>
      </div>

      <div class="modal-body">
        <% var msg = blocks.message || message; %>
        <% if (msg === true){ %><script>document.location.reload();</script><%- i18n('modal.'+msg) -%>
        <% } else if (msg && msg.html.length > 0) { %><div class="alert alert-info" role="alert"><%- i18n('modal.'+msg) -%></div><% } %>
        <%- body -%>
      </div>
      
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%- i18n('modal.cancel') -%></button>
        <% if (blocks['data-action'] == 'submit'){ %>
        <% if (blocks.delete) { %><button type="submit" class="btn btn-danger"><%- i18n('modal.delete') -%></button><% } %>
        <button type="submit" class="btn btn-primary"><%- i18n('modal.save') -%></button>
        <% } else { %>
        <% if (blocks.delete) { %><button type="button" class="btn btn-danger"  name="op" value="delete" data-action="<%- blocks['data-action'] || 'ajax' -%>"><%- i18n('modal.delete') -%></button><% } %>
        <button type="button" class="btn btn-primary" name="op" value="save"   data-action="<%- blocks['data-action'] || 'ajax' -%>"><%- i18n('modal.save') -%></button>
        <% } %>
      </div>
      
    </form>
    </div>
  </div>
  <%- scripts -%>
  <%- stylesheets -%>
</div>